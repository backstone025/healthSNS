        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/iDtxt1"
        android:layout_width="65dp"
        android:layout_height="31dp"
        android:layout_marginEnd="40dp"
