        android:layout_marginTop="91dp"
        android:layout_marginEnd="78dp"
        android:text="kg"
        app:layout_constraintEnd_toStartOf="@+id/profileDtxt1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pfIv" />

    <TextView
        android:id="@+id/pftxt2_2"
        android:layout_width="wrap_content"
