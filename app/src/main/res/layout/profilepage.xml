        app:layout_constraintEnd_toStartOf="@+id/pftxt2_2"
        app:layout_constraintTop_toBottomOf="@+id/pfIv" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="41dp"
        android:text="체지방량"
        app:layout_constraintBottom_toTopOf="@+id/pftxt2_2"
        app:layout_constraintEnd_toEndOf="@+id/pfDBtn"
        app:layout_constraintStart_toEndOf="@+id/pftxt2_2" />

    <TextView
        android:id="@+id/pftodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="32dp"
        android:text="계획"
        app:layout_constraintBottom_toTopOf="@+id/pfscv"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>