        android:layout_width="48dp"
        android:layout_height="48dp"
        android:autoText="true"
        android:text="40"
        app:layout_constraintBottom_toBottomOf="@+id/pftxt1_2"
        app:layout_constraintEnd_toStartOf="@+id/pftxt1_2"
        app:layout_constraintStart_toStartOf="@+id/pftodo"
        app:layout_constraintTop_toBottomOf="@+id/pftxt1_2" />

    <TextView
        android:id="@+id/pftxt22"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="70"
        app:layout_constraintBaseline_toBaselineOf="@+id/pftxt2_2"
